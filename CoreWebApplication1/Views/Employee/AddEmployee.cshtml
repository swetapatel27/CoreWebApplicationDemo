@{
}

<div>
    <h1>Add Employees</h1>
</div>
<form asp-action="AddEmployee">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" asp-for="Name" class="form-control" id="Name">
        <span asp-validation-for="Name" class="text-danger"></span>


    </div>
    <div class="form-group">
        <label for="Department">
            Department
        </label>
        <input type="text" asp-for="Department" class="form-control" id="Department">
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Salary">
            Salary
        </label>
        <input type="text" asp-for="Salary" class="form-control" id="Salary">
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
