@model CoreWebApplication1.Models.StudentModel
@{
}

<form asp-action="AddStudent" class="mt-3">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" asp-for="Name" class="form-control" id="name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="name">Email:</label>
        <input type="email" asp-for="Email" class="form-control" id="email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="name">Age:</label>
        <input type="text" asp-for="Age" class="form-control" id="age">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="name">Semester:</label>
        <input type="text" asp-for="Sem" class="form-control" id="sem">
        <span asp-validation-for="Sem" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
@if (TempData["msg"] != null)
{
    <script>
        alert('@TempData["msg"].ToString()');
        window.location.href = "@Url.Action("Index","Student")";
    </script>


}
